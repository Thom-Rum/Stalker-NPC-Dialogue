; Faction relation change values:
[battle_sim]

; Whether or not to simulate offline battles (bool):
enable_offline_battles = true

; Whether or not to show news updates about offline battles (bool):
show_news = false

; Relation change value multiplier for offline kills (float, decimal percent):
offline_modifier = 1.0  ; 100%

; Length of time between updates for potential offline battles (int, seconds):
update_time = 7200  ; 2 hours

; Max allowable deviation from update time (float, decimal percent):
deviation = 0.5  ; +-50%

; Percent chance an offline battle will occur at update (float, decimal percent):
battle_chance = 0.3  ; 30%

; Maximum number of troops on each side per battle (int):
max_troops = 5

; Percent chance per round a battle will end in a draw or surrender (float, decimal percent):
stalemate_chance = 0.1  ; 10%

