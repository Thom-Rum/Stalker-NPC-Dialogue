on_info = {+oso_who_are_you} ph_door@drx_ql_door_locked

[ph_door@drx_ql_door_locked]
locked = true
closed = true
on_info = {+warlab_deactivate_generators_done} ph_door@drx_ql_door_open

[ph_door@drx_ql_door_open]
locked = false
closed = false

