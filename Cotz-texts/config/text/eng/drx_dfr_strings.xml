	<!-- Factions turn hostile (%s 1 = faction 1, %s 2 = faction 2): -->
	<string id="drx_dfr_str_neutral_to_hostile">
		<text>%s and %s factions have declared war on each other.</text>
	</string>

	<!-- Factions form an alliance (%s 1 = faction 1, %s 2 = faction 2): -->
	<string id="drx_dfr_str_neutral_to_allied">
		<text>%s and %s factions have formed an alliance.</text>
	</string>

	<!-- Factions go from allied to neutral (%s 1 = faction 1, %s 2 = faction 2): -->
	<string id="drx_dfr_str_allied_to_neutral">
		<text>%s - %s relations are deteriorating.</text>
	</string>

	<!-- Factions go from hostile to neutral (%s 1 = faction 1, %s 2 = faction 2): -->
	<string id="drx_dfr_str_hostile_to_neutral">
		<text>%s and %s factions have declared a cease-fire.</text>
	</string>

