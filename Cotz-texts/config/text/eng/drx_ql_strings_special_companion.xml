	<!-- Companion squad leader intro dialog text: -->
	<string id="drx_ql_str_ecolog_companion_task_1_start_dialog_1">
		<text>We are researching an anomaly field not far from here. We need you to escort us there and keep us safe while we collect a few samples and take some readings. I've marked the location on your PDA.</text>
	</string>

	<!-- Companion squad leader during task dialog text: -->
	<string id="drx_ql_str_ecolog_companion_task_1_start_dialog_2">
		<text>We should keep moving. The longer we wait around the more dangerous it gets.</text>
	</string>

	<!-- Companion squad leader task complete dialog text: -->
	<string id="drx_ql_str_ecolog_companion_task_1_complete">
		<text>We have completed our analysis. Let's return to the camp.</text>
	</string>

	<!-- Actor reply dialog text: -->
	<string id="drx_ql_str_ecolog_companion_task_1_actor_reply">
		<text>Okay.</text>
